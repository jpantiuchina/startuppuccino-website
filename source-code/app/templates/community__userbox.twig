<div class="card card--{{ user.role|upper }} {% if user.id in residence_mentors %}card--RESIDENCE_MENTOR{% endif %}">

	<a href="./?user_id={{ user.id }}">
    	{% if user.avatar|trim == "" %}
            {% set avatar = default_avatar %}            
        {% else %}
            {% set avatar = user.avatar %}
        {% endif %}
    	<div class="card__pic" 
    	     style="background-image:url('../app/assets/pics/people/{{ avatar }}')"></div>
    	<div class="card__details">
			<span class="card__details_name">{{ user.firstname ~ " " ~ user.lastname }}</span>
    		<span class="card__details_role">{% if user.id in residence_mentors %}residence {% endif %}{{ user.role }}</span>
    		<span class="card__details_background">{{ user.background }}</span>
    	</div>

    </a>

</div>