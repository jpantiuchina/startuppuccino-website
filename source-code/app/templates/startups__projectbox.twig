<div class="card card--{% if project.is_approved=='1' %}PROJECT{% else %}IDEA card--hidden{% endif %}">

	<a href="./?project_id={{ project.id }}">
    	
    	{% set avatar = default_avatar %}
    	<div class="card__pic" 
    	     style="background-image:url('../app/assets/pics/ideas/{{ project.avatar | default(avatar) }}')"></div>
    	<div class="card__details">
			<span class="card__details_name">{{ project.title }}</span>
    	</div>

    </a>

</div>