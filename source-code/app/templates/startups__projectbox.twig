<div class="card card--{{ project.role|upper }}>

	<a href="./?project_id={{ project.id }}">
    	
    	{% set avatar = default_avatar %}
    	<div class="card__pic" 
    	     style="background-image:url('../app/assets/pics/people/{{ project.avatar | default(avatar) }}')"></div>
    	<div class="card__details">
			<span class="card__details_name">{{ project.firstname ~ " " ~ project.lastname }}</span>
    		<span class="card__details_role">{{ project.role }}</span>
    		<span class="card__details_background">{{ project.background }}</span>
    	</div>

    </a>

</div>